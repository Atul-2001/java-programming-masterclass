<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<BorderPane fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@style.css" >
    <top>
        <Label text="This is top of Border Pane"
                textFill="green" BorderPane.alignment="CENTER"
               style="-fx-border-color: blue; -fx-border-width: 3; -fx-border-style: dashed">
            <font>
                <Font size="42"/>
            </font>
        </Label>
    </top>

    <left>
        <VBox spacing="10" alignment="CENTER">

            <padding>
                <Insets left="10"/>
            </padding>

            <Button text="Button 1" />
            <Button text="Button 2" />
            <Button text="Button 3" />
            <Button text="Button 4" />
            <Button text="Button 5" />
            <Button text="Button 6" />
            <Button text="Button 7" />
            <Button text="Button 8" />
        </VBox>
    </left>

    <right>
        <Label text="This label is in the right position"/>
    </right>

    <center>
        <GridPane alignment="CENTER">
            <ScrollPane GridPane.rowIndex="0" GridPane.columnIndex="0" >
                <Label styleClass="centerLabel" text="This label is in the center position and has really loooooooooooooooooooooooooooooong text"/>
            </ScrollPane>
            <FlowPane GridPane.rowIndex="1" GridPane.columnIndex="0" orientation="HORIZONTAL">
                <Button text="Button 1" />
                <Button text="Button 2" />
                <Button text="Button 3" />
                <Button text="Button 4" />
                <Button text="Button 5" />
                <Button text="Button 6" />
                <Button text="Button 7" />
                <Button text="Button 8" />
                <Button text="Button 9" />
                <Button text="Button 10" />
                <Button text="Button 11" />
                <Button text="Button 12" />
            </FlowPane>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="10" id="footerButton">
            <padding>
                <Insets right="20"
                        bottom="10"/>
            </padding>
            <Button text="OK" prefWidth="90"/>
            <Button text="Clear" prefWidth="90"/>
            <Button text="Reset" prefWidth="90"/>
        </HBox>
    </bottom>
</BorderPane>

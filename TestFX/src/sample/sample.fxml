<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ProgressBar?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <TextField fx:id="search" GridPane.rowIndex = "0" prefWidth="400" onAction="#handleDownloadAction"/>
    <ProgressBar fx:id="progress" GridPane.rowIndex = "1" prefWidth="300" progress="0.0"/>
    <Button onAction="#reset" GridPane.rowIndex = "2"/>
    <Button onAction="#play" GridPane.rowIndex = "3"/>
</GridPane>